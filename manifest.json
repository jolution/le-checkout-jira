{
  "manifest_version": 3,
  "name": "Jira Branchname Generator",
  "version": "1.0.0",
  "author": "@juliankasimir",
  "description": "Generates a branch name from the Jira ticket number and title",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "alarms",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://jira.fsc.atos-services.net/browse/*",
        "https://*.atlassian.net/browse/*"
      ],
      "css": [
        "/components/content/content.css"
      ],
      "js": [
        "/components/content/inject.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/components/content/inject.js",
        "/components/content/utils.js",
        "/components/content/config.js",
        "/components/content/content.js",
        "/components/content/content.css",
        "/components/content/translation.json",
        "/components/content/language.js",
        "chrome-extension://mcibebkpekoelnpennfjepikmfndeccm/content.js",
        "chrome-extension://mcibebkpekoelnpennfjepikmfndeccm/content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
